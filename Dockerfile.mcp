# ===================================================================
# MCP Server Dockerfile (for HTTP mode)
# ===================================================================
# This image runs the MCP Customer Sales server in HTTP mode
# Can be used for remote MCP connections (Container Apps deployment)
# ===================================================================

FROM python:3.12-slim AS base

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/workspace/src/python/mcp_server \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create workspace directory
WORKDIR /workspace

# ===================================================================
# Dependencies Stage
# ===================================================================
FROM base AS dependencies

# Install MCP and database dependencies
RUN pip install --no-cache-dir \
    asyncpg>=0.30.0 \
    mcp>=1.10.0 \
    python-dotenv>=1.1.1 \
    pydantic

# ===================================================================
# Application Stage
# ===================================================================
FROM dependencies AS application

# Copy MCP server source code
COPY src/python/mcp_server/ /workspace/src/python/mcp_server/

# Create non-root user
RUN useradd --create-home --shell /bin/bash appuser \
    && chown -R appuser:appuser /workspace

# ===================================================================
# Runtime Stage
# ===================================================================
FROM application AS runtime

USER appuser

WORKDIR /workspace/src/python/mcp_server/customer_sales

# Expose MCP HTTP port (default FastMCP port)
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=15s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run MCP server in HTTP mode (no --stdio flag)
CMD ["python", "customer_sales.py"]
